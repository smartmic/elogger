# @configure_input@

# Package-specific substitution variables
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)

# Prefix-specific substitution variables
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

# VPATH-specific substitution variables
srcdir = @srcdir@
VPATH = @srcdir@

# Shell-specific substitution variables
SHELL = @SHELL@
TZ = @TZ@ # necessary because test(s) use locale for strftime	\
formatting and timestamps in test files use CET timezone

# Tool-specific substitution variables
CXX = @CXX@
CXXFLAGS = @CXXFLAGS@
CPPFLAGS = @CPPFLAGS@
INSTALL  = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
wdiff_var = @wdiff_var@

sources = $(srcdir)/main.cpp $(srcdir)/measurement.cpp

all: elogger

elogger: $(sources)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -I. -I$(srcdir) -I.. -o $@ $(sources)

check: all
	$(wdiff_var) ../tests/a0086944.txt <(TZ=$(TZ) ./elogger ../tests/A0086944.BIN)
	@echo "*** ALL TESTS PASSED ***"

install:
	$(INSTALL) -d $(DESTDIR)$(bindir)
	$(INSTALL) -m 0755 elogger $(DESTDIR)$(bindir)

uninstall:
	rm -f $(DESTDIR)$(bindir)/elogger
	-rmdir $(DESTDIR)$(bindir)  >/dev/null 2>&1
clean:
	-rm elogger

Makefile: Makefile.in ../config.status
	cd .. && ./config.status src/$@

../config.status: ../configure
	cd .. && ./config.status --recheck

.PHONY: all clean check install
